    "code": "import React from 'react'\nimport { MoreHorizontal } from 'lucide-react'\nimport { IconButton } from '@ui/components/atoms'\n\ninterface ResourceCardProps {\n  title: string\n  subtitle?: string\n  icon?: React.ReactNode\n  status?: React.ReactNode\n  stats?: { label: string; value: string | number }[]\n  actions?: React.ReactNode\n  onClick?: () => void\n  className?: string\n}\n\nexport function ResourceCard({\n  title,\n  subtitle,\n  icon,\n  status,\n  stats,\n  actions,\n  onClick,\n  className = '',\n}: ResourceCardProps) {\n  return (\n    <div\n      onClick={onClick}\n      className={`\n        bg-[var(--bg-secondary)] rounded-lg border border-[var(--border-primary)]\n        p-4 transition-all duration-150\n        ${onClick ? 'cursor-pointer hover:border-[var(--accent-primary)] hover:bg-[var(--bg-hover)]' : ''}\n        ${className}\n      `}\n    >\n      <div className=\"flex items-start justify-between gap-3\">\n        <div className=\"flex items-start gap-3 min-w-0\">\n          {icon && (\n            <div className=\"flex-shrink-0 text-[var(--accent-primary)]\">\n              {icon}\n            </div>\n          )}\n          <div className=\"min-w-0\">\n            <div className=\"flex items-center gap-2\">\n              <h3 className=\"text-sm font-medium text-[var(--text-primary)] truncate\">\n                {title}\n              </h3>\n              {status}\n            </div>\n            {subtitle && (\n              <p className=\"text-xs text-[var(--text-secondary)] mt-0.5 truncate\">\n                {subtitle}\n              </p>\n            )}\n          </div>\n        </div>\n        {actions && (\n          <div className=\"flex-shrink-0\" onClick={(e) => e.stopPropagation()}>\n            {actions}\n          </div>\n        )}\n      </div>\n\n      {stats && stats.length > 0 && (\n        <div className=\"flex items-center gap-4 mt-3 pt-3 border-t border-[var(--border-subtle)]\">\n          {stats.map((stat, idx) => (\n            <div key={idx} className=\"flex flex-col\">\n              <span className=\"text-xs text-[var(--text-muted)]\">{stat.label}</span>\n              <span className=\"text-sm font-medium text-[var(--text-primary)]\">\n                {stat.value}\n              </span>\n            </div>\n          ))}\n        </div>\n      )}\n    </div>\n  )\n}\n\ninterface ActionMenuProps {\n  children: React.ReactNode\n}\n\nexport function ActionMenu({ children }: ActionMenuProps) {\n  return (\n    <div className=\"relative group\">\n      <IconButton icon={<MoreHorizontal className=\"h-4 w-4\" />} size=\"sm\" />\n      <div className=\"absolute right-0 top-full mt-1 z-10 hidden group-hover:block\">\n        <div className=\"bg-[var(--bg-primary)] border border-[var(--border-primary)] rounded-lg shadow-lg py-1 min-w-[120px]\">\n          {children}\n        </div>\n      </div>\n    </div>\n  )\n}\n\ninterface ActionItemProps {\n  icon?: React.ReactNode\n  label: string\n  onClick: () => void\n  variant?: 'default' | 'danger'\n}\n\nexport function ActionItem({ icon, label, onClick, variant = 'default' }: ActionItemProps) {\n  return (\n    <button\n      onClick={onClick}\n      className={`\n        w-full flex items-center gap-2 px-3 py-1.5 text-xs text-left\n        transition-colors hover:bg-[var(--bg-hover)]\n        ${variant === 'danger' ? 'text-[var(--accent-error)]' : 'text-[var(--text-primary)]'}\n      `}\n    >\n      {icon && <span className=\"flex-shrink-0\">{icon}</span>}\n      {label}\n    </button>\n  )\n}\n",
