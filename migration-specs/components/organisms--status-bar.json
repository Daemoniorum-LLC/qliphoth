    "code": "import React from 'react'\nimport { GitBranch, AlertTriangle } from 'lucide-react'\nimport { StatusBarItem } from '../molecules'\n\nexport interface StatusBarProps {\n  filePath?: string\n  tabSize: number\n  insertSpaces: boolean\n  encoding?: string\n  onGitClick?: () => void\n  onProblemsClick?: () => void\n  leftItems?: React.ReactNode\n  rightItems?: React.ReactNode\n  className?: string\n}\n\nexport const StatusBar: React.FC<StatusBarProps> = ({\n  filePath,\n  tabSize,\n  insertSpaces,\n  encoding = 'UTF-8',\n  onGitClick,\n  onProblemsClick,\n  leftItems,\n  rightItems,\n  className = '',\n}) => {\n  return (\n    <div\n      role=\"status\"\n      aria-label=\"Status bar\"\n      className={`h-[var(--statusbar-height)] flex items-center justify-between px-3 bg-[var(--statusbar-bg)] select-none ${className}`}\n    >\n      <div className=\"flex items-center gap-3\">\n        {onGitClick && (\n          <StatusBarItem icon={<GitBranch />} onClick={onGitClick} tooltip=\"Source Control\">\n            <span className=\"sr-only\">Source Control</span>\n          </StatusBarItem>\n        )}\n        {onProblemsClick && (\n          <StatusBarItem icon={<AlertTriangle />} onClick={onProblemsClick} tooltip=\"Problems\">\n            <span className=\"sr-only\">Problems</span>\n          </StatusBarItem>\n        )}\n        {leftItems}\n        {filePath && (\n          <StatusBarItem tooltip={filePath}>\n            <span className=\"truncate max-w-[300px]\">{filePath}</span>\n          </StatusBarItem>\n        )}\n      </div>\n\n      <div className=\"flex items-center gap-3\">\n        {rightItems}\n        <StatusBarItem>\n          {insertSpaces ? 'Spaces' : 'Tabs'}: {tabSize}\n        </StatusBarItem>\n        <StatusBarItem>{encoding}</StatusBarItem>\n      </div>\n    </div>\n  )\n}\n",
