    "code": "import { useEffect, useState } from \"react\"\nimport { Card, Label } from \"@persona-framework/ui\"\nimport { AlertTriangle } from \"lucide-react\"\n\ninterface PromptMetricsProps {\n  content: string\n}\n\nexport function PromptMetrics({ content }: PromptMetricsProps) {\n  const [metrics, setMetrics] = useState({\n    length: 0,\n    readabilityScore: 0,\n    tokenCount: 0,\n    warnings: [] as string[],\n  })\n\n  useEffect(() => {\n    const warnings: string[] = []\n    const length = content.length\n    const tokenCount = Math.ceil(length / 4)\n\n    if (length > 4000) {\n      warnings.push(\"Prompt is very long and may exceed model context limits\")\n    }\n    if (length < 50) {\n      warnings.push(\"Prompt may be too vague or short\")\n    }\n    if (!content.includes(\"?\") && !content.includes(\".\")) {\n      warnings.push(\"Consider adding clear instructions or questions\")\n    }\n    if (content.toLowerCase().includes(\"do not\") || content.toLowerCase().includes(\"don't\")) {\n      warnings.push(\"Consider using positive framing instead of negations\")\n    }\n\n    const readabilityScore = Math.min(100, Math.max(0, 100 - (length / 50)))\n\n    setMetrics({\n      length,\n      readabilityScore,\n      tokenCount,\n      warnings,\n    })\n  }, [content])\n\n  return (\n    <div className=\"flex flex-col gap-3\">\n      <Label className=\"font-semibold\">Prompt Metrics</Label>\n\n      <Card className=\"p-3\">\n        <div className=\"grid grid-cols-2 gap-3\">\n          <div className=\"flex flex-col gap-1\">\n            <span className=\"text-xs text-muted-foreground\">Length</span>\n            <div className=\"text-base font-semibold\">\n              {metrics.length}\n              {\" \"}\n              chars\n            </div>\n          </div>\n          <div className=\"flex flex-col gap-1\">\n            <span className=\"text-xs text-muted-foreground\">Est. Tokens</span>\n            <div className=\"text-base font-semibold\">{metrics.tokenCount}</div>\n          </div>\n          <div className=\"flex flex-col gap-1\">\n            <span className=\"text-xs text-muted-foreground\">Readability</span>\n            <div className=\"text-base font-semibold\">\n              {metrics.readabilityScore.toFixed(0)}\n              %\n            </div>\n          </div>\n        </div>\n      </Card>\n\n      {metrics.warnings.length > 0 && (\n        <>\n          <Label className=\"font-semibold\">Optimization Suggestions</Label>\n          <div className=\"flex flex-col gap-2\">\n            {metrics.warnings.map((warning, index) => (\n              <div className=\"flex items-start gap-2\" key={index}>\n                <AlertTriangle className=\"h-4 w-4 text-yellow-500 mt-0.5 flex-shrink-0\" />\n                <span className=\"text-sm text-muted-foreground\">{warning}</span>\n              </div>\n            ))}\n          </div>\n        </>\n      )}\n    </div>\n  )\n}\n",
