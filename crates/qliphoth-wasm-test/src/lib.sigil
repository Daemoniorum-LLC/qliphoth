//! Minimal WASM Test
//! Validates the Sigil -> C -> WASM bootstrap pipeline

/// Add two numbers
pub fn add(a: i32, b: i32) -> i32 {
    a + b
}

/// Multiply two numbers
pub fn multiply(a: i32, b: i32) -> i32 {
    a * b
}

/// Subtract
pub fn subtract(a: i32, b: i32) -> i32 {
    a - b
}

/// Square a number
pub fn square(x: i32) -> i32 {
    x * x
}

/// Double a number
pub fn double(x: i32) -> i32 {
    x + x
}
