// DOM Test - Basic element creation and manipulation

/// Create a div, set its text content, and return its handle
pub fn main() -> i64! {
    // Create a div element
    let div_id! = dom::create_element("div");

    // Set an attribute
    dom::set_attribute(div_id, "id", "test-div");

    // Set text content
    dom::set_text_content(div_id, "Hello from Sigil!");

    // Log what we did
    console::print(div_id);

    // Return the element handle
    div_id
}
