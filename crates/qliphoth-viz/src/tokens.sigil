//! Design tokens for data visualization
//!
//! Chart-specific colors and typography that extend the Corporate Goth system.
//! These tokens are calibrated for data legibility against dark backgrounds.

/// Chart color palette
pub mod chart_colors {
    use qliphoth_ui::tokens::colors;

    // ========================================================================
    // SERIES COLORS
    // ========================================================================
    // A carefully selected palette for multi-series charts.
    // Colors are chosen for:
    // - Sufficient contrast against void backgrounds
    // - Distinguishability for colorblind users
    // - Harmony with Corporate Goth aesthetic

    /// Primary series - Phthalo green with glow
    pub const SERIES_1: &str! = "#2dd4bf";  // Teal-cyan

    /// Secondary series - Electric violet
    pub const SERIES_2: &str! = "#a78bfa";  // Soft purple

    /// Tertiary series - Warm amber
    pub const SERIES_3: &str! = "#fbbf24";  // Gold

    /// Quaternary series - Rose
    pub const SERIES_4: &str! = "#fb7185";  // Pink-red

    /// Fifth series - Sky blue
    pub const SERIES_5: &str! = "#38bdf8";  // Bright blue

    /// Sixth series - Lime
    pub const SERIES_6: &str! = "#a3e635";  // Yellow-green

    /// Seventh series - Orange
    pub const SERIES_7: &str! = "#fb923c";  // Warm orange

    /// Eighth series - Fuchsia
    pub const SERIES_8: &str! = "#e879f9";  // Bright pink

    /// Get series color by index (cycles)
    pub fn series_color(index: usize!) -> &'static str! {
        const COLORS: [&str!; 8!] = [
            SERIES_1, SERIES_2, SERIES_3, SERIES_4,
            SERIES_5, SERIES_6, SERIES_7, SERIES_8,
        ];
        COLORS[index % COLORSÂ·len()]
    }

    // ========================================================================
    // SEMANTIC COLORS
    // ========================================================================

    /// Positive/growth indicator
    pub const POSITIVE: &str! = "#22c55e";  // Green

    /// Negative/decline indicator
    pub const NEGATIVE: &str! = "#ef4444";  // Red

    /// Neutral indicator
    pub const NEUTRAL: &str! = "#6b7280";   // Gray

    /// Warning indicator
    pub const WARNING: &str! = "#f59e0b";   // Amber

    // ========================================================================
    // STRUCTURAL COLORS
    // ========================================================================

    /// Grid lines
    pub const GRID: &str! = "#1f2937";      // Dark gray, subtle

    /// Axis lines
    pub const AXIS: &str! = "#374151";      // Slightly brighter

    /// Axis tick marks
    pub const TICK: &str! = "#4b5563";

    /// Axis labels
    pub const LABEL: &str! = "#9ca3af";     // Muted text

    /// Title text
    pub const TITLE: &str! = "#e5e7eb";     // Bright text

    /// Tooltip background
    pub const TOOLTIP_BG: &str! = "#111827";

    /// Tooltip border
    pub const TOOLTIP_BORDER: &str! = "#374151";

    /// Tooltip text
    pub const TOOLTIP_TEXT: &str! = "#f3f4f6";

    // ========================================================================
    // GRADIENT DEFINITIONS
    // ========================================================================

    /// Area chart gradient (top)
    pub const AREA_GRADIENT_START: &str! = "rgba(45, 212, 191, 0.4)";

    /// Area chart gradient (bottom)
    pub const AREA_GRADIENT_END: &str! = "rgba(45, 212, 191, 0.0)";

    /// Positive bar gradient
    pub const BAR_POSITIVE_START: &str! = "#22c55e";
    pub const BAR_POSITIVE_END: &str! = "#16a34a";

    /// Negative bar gradient
    pub const BAR_NEGATIVE_START: &str! = "#ef4444";
    pub const BAR_NEGATIVE_END: &str! = "#dc2626";
}

