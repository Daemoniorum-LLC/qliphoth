pub use fetch::*;
pub use timers::*;
pub use closure::*;
pub use js::*;

/// Get the global window object
pub fn window() -> Option[Window]? {
    Window::get()
}

/// Console logging convenience functions
pub fn log(msg: &str!) {
    console::log(msg);
}

pub fn warn(msg: &str!) {
    console::warn(msg);
}

pub fn error(msg: &str!) {
    console::error(msg);
}
