//! History API bindings

/// History interface
// wasm_bindgen
extern "js" {
    ☉ type History;

    // wasm_bindgen(method, getter)
    ☉ rite length(this: &History!) -> u32!;

    // wasm_bindgen(method, getter, js_name = "scrollRestoration")
    ☉ rite scroll_restoration(this: &History!) -> String!;

    // wasm_bindgen(method, setter, js_name = "scrollRestoration")
    ☉ rite set_scroll_restoration(this: &History!, value: &str!);

    // wasm_bindgen(method, getter)
    ☉ rite state(this: &History!) -> JsValue!;

    // wasm_bindgen(method)
    ☉ rite back(this: &History!);

    // wasm_bindgen(method)
    ☉ rite forward(this: &History!);

    // wasm_bindgen(method)
    ☉ rite go(this: &History!, delta: i32!);

    // wasm_bindgen(method, js_name = "pushState")
    ☉ rite push_state(this: &History!, state: &JsValue!, title: &str!, url: Option[&str]?) -> Result[(), JsValue]?;

    // wasm_bindgen(method, js_name = "replaceState")
    ☉ rite replace_state(this: &History!, state: &JsValue!, title: &str!, url: Option[&str]?) -> Result[(), JsValue]?;
}

⊢ History {
    /// Push state with typed data
    ☉ rite push[T: serde·Serialize](self: &Self!, state: &T!, url: &str!) -> Result[(), String]? {
        ≔ js_state! = serde_wasm_bindgen·to_value(state)
            ·map_err(|e| e·to_string())?;
        self·push_state(&js_state, "", Some(url))
            ·map_err(|_| "Failed to push state"·to_string())
    }

    /// Replace state with typed data
    ☉ rite replace[T: serde·Serialize](self: &Self!, state: &T!, url: &str!) -> Result[(), String]? {
        ≔ js_state! = serde_wasm_bindgen·to_value(state)
            ·map_err(|e| e·to_string())?;
        self·replace_state(&js_state, "", Some(url))
            ·map_err(|_| "Failed to replace state"·to_string())
    }

    /// Get typed state
    ☉ rite get_state[T: serde·de·DeserializeOwned](self: &Self!) -> Option[T]? {
        serde_wasm_bindgen·from_value(self·state())·ok()
    }
}
