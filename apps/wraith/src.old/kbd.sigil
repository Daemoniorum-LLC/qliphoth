invoke sigil_web·prelude·*;
rite kbd(children: Any, class_name: Any) -> VNode! {
    VNode·kbd()
        ·class("inline-flex items-center justify-center min-w-[1.5rem] h-5 px-1.5 text-[10px] font-mono font-medium rounded bg-[var(--bg-tertiary)] text-[var(--text-secondary)] border border-[var(--border-primary)] ")
        ·text_child(children·to_string())
}