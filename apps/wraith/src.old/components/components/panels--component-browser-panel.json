    "path": "/home/crook/dev/wraith/wraith-framework/src/ui/components/panels/ComponentBrowserPanel.tsx",
    "code": "import React from 'react'\nimport { Button, Spinner, Input } from '@persona-framework/ui'\nimport { File, Plus, Search } from 'lucide-react'\nimport { makeHttpClient } from '../../../data/https'\n\nconst http = makeHttpClient('/api')\n\ntype Component = {\n  name: string\n  domain: string\n  type: 'atom' | 'molecule' | 'organism'\n  path: string\n  project: string\n}\n\ninterface ComponentBrowserPanelProps {\n  onOpenComponent?: (componentPath: string, componentName: string) => void\n  onNewComponent?: () => void\n}\n\nexport function ComponentBrowserPanel({ onOpenComponent, onNewComponent }: ComponentBrowserPanelProps) {\n  const [components, setComponents] = React.useState<Component[]>([])\n  const [isLoading, setIsLoading] = React.useState(false)\n  const [searchFilter, setSearchFilter] = React.useState('')\n\n  const scanWorkspace = async () => {\n    setIsLoading(true)\n    try {\n      const res = await http.get('/workspace/info')\n      const projects = res?.data?.projects || []\n\n      const allComponents: Component[] = []\n      for (const project of projects) {\n        const treeRes = await http.get('/project/tree', { params: { projectPath: project.path, depth: 4 } })\n        const tree = treeRes?.data\n\n        const findComponents = (node: any, domain: string = 'shared', type: 'atom' | 'molecule' | 'organism' | null = null): void => {\n          if (!node) return\n\n          const isAtomDir = node.name === 'atoms'\n          const isMoleculeDir = node.name === 'molecules'\n          const isOrganismDir = node.name === 'organisms'\n          const isDomainDir = node.isDir && node.path?.includes('/domains/') && !isAtomDir && !isMoleculeDir && !isOrganismDir\n\n          const currentType = isAtomDir ? 'atom' : isMoleculeDir ? 'molecule' : isOrganismDir ? 'organism' : type\n          const currentDomain = isDomainDir ? node.name : domain\n\n          if (!node.isDir && (node.name.endsWith('.tsx') || node.name.endsWith('.jsx'))) {\n            if (currentType) {\n              allComponents.push({\n                name: node.name.replace(/\\.(tsx|jsx)$/, ''),\n                domain: currentDomain,\n                type: currentType,\n                path: node.path,\n                project: project.name\n              })\n            }\n          }\n\n          if (node.children) {\n            node.children.forEach((child: any) => findComponents(child, currentDomain, currentType))\n          }\n        }\n\n        findComponents(tree)\n      }\n\n      setComponents(allComponents)\n    } catch (e: any) {\n      console.error('Failed to scan workspace:', e)\n    } finally {\n      setIsLoading(false)\n    }\n  }\n\n  React.useEffect(() => {\n    scanWorkspace()\n  }, [])\n\n  const filteredComponents = components.filter(c =>\n    searchFilter ? c.name.toLowerCase().includes(searchFilter.toLowerCase()) : true\n  )\n\n  const groupedComponents = React.useMemo(() => {\n    const groups: Record<string, Record<string, Component[]>> = {}\n    filteredComponents.forEach(comp => {\n      if (!groups[comp.domain]) groups[comp.domain] = {}\n      if (!groups[comp.domain][comp.type]) groups[comp.domain][comp.type] = []\n      groups[comp.domain][comp.type].push(comp)\n    })\n    return groups\n  }, [filteredComponents])\n\n  if (isLoading) {\n    return (\n      <div className=\"flex flex-col h-full bg-[#1e1e1e] text-[#cccccc]\">\n        <div className=\"px-3 py-2 border-b border-[#3c3c3c] text-[13px] font-semibold\">\n          Components\n        </div>\n        <div className=\"flex justify-center items-center p-4\">\n          <Spinner size=\"sm\" />\n          <span className=\"ml-2 text-xs\">Scanning workspace...</span>\n        </div>\n      </div>\n    )\n  }\n\n  return (\n    <div className=\"flex flex-col h-full bg-[#1e1e1e] text-[#cccccc]\">\n      <div className=\"px-3 py-2 border-b border-[#3c3c3c] text-[13px] font-semibold\">\n        Components\n      </div>\n      <div className=\"flex flex-col gap-1.5 px-2 py-2 border-b border-[#3c3c3c]\">\n        <Button size=\"sm\" onClick={onNewComponent}>\n          <Plus className=\"w-3.5 h-3.5 mr-1\" />\n          New Component\n        </Button>\n        <div className=\"relative\">\n          <Search className=\"absolute left-2 top-1/2 -translate-y-1/2 w-3.5 h-3.5 text-[#858585]\" />\n          <Input\n            size=\"sm\"\n            placeholder=\"Search components...\"\n            value={searchFilter}\n            onChange={(e) => setSearchFilter(e.target.value)}\n            className=\"pl-8\"\n          />\n        </div>\n        <Button size=\"sm\" variant=\"outline\" onClick={scanWorkspace}>\n          Refresh ({components.length})\n        </Button>\n      </div>\n      <div className=\"flex-1 overflow-auto px-2 py-2\">\n        {Object.keys(groupedComponents).length === 0 ? (\n          <div className=\"p-4 text-center text-[#858585] text-xs\">\n            No components found. Add a project with /atoms, /molecules, or /organisms directories.\n          </div>\n        ) : (\n          Object.keys(groupedComponents).sort().map(domain => (\n            <div key={domain} className=\"mb-3\">\n              <div className=\"text-xs font-semibold text-[#4fc3f7] mb-1\">{domain}</div>\n              {Object.keys(groupedComponents[domain]).sort().map(type => (\n                <div key={type} className=\"ml-3 mb-2\">\n                  <div className=\"text-[11px] font-semibold text-[#b0b0b0] mb-0.5\">{type}s ({groupedComponents[domain][type].length})</div>\n                  {groupedComponents[domain][type].map((comp, i) => (\n                    <div\n                      key={i}\n                      className=\"ml-3 px-2 py-1 cursor-pointer rounded text-xs hover:bg-[#2b2b2b] flex items-center gap-1.5\"\n                      onClick={() => onOpenComponent?.(comp.path, comp.name)}\n                    >\n                      <File className=\"w-3.5 h-3.5\" />\n                      {comp.name}\n                      <span className=\"text-[10px] text-[#858585] ml-auto\">\n                        ({comp.project})\n                      </span>\n                    </div>\n                  ))}\n                </div>\n              ))}\n            </div>\n          ))\n        )}\n      </div>\n    </div>\n  )\n}\n",
