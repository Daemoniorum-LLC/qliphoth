    "code": "import React, { useState } from 'react'\nimport { X, Pin } from 'lucide-react'\n\nexport interface TabItemProps {\n  id: string\n  title: string\n  icon?: React.ReactNode\n  active?: boolean\n  pinned?: boolean\n  modified?: boolean\n  onClick?: () => void\n  onClose?: () => void\n  onPin?: () => void\n  onContextMenu?: (e: React.MouseEvent) => void\n}\n\nexport const TabItem: React.FC<TabItemProps> = ({\n  title,\n  icon,\n  active = false,\n  pinned = false,\n  modified = false,\n  onClick,\n  onClose,\n  onPin,\n  onContextMenu,\n}) => {\n  const [isHovered, setIsHovered] = useState(false)\n\n  const showActions = isHovered || active\n\n  return (\n    <div\n      role=\"tab\"\n      aria-selected={active}\n      tabIndex={active ? 0 : -1}\n      onClick={onClick}\n      onContextMenu={onContextMenu}\n      onMouseEnter={() => setIsHovered(true)}\n      onMouseLeave={() => setIsHovered(false)}\n      className={`group relative flex items-center gap-2 px-3 h-[var(--tab-height)] cursor-pointer select-none border-r border-[var(--border-primary)] transition-colors ${\n        active\n          ? 'bg-[var(--bg-primary)] text-[var(--text-primary)]'\n          : 'bg-[var(--bg-secondary)] text-[var(--text-secondary)] hover:text-[var(--text-primary)]'\n      }`}\n    >\n      {icon && <span className=\"flex-shrink-0 [&>svg]:h-4 [&>svg]:w-4\">{icon}</span>}\n\n      <span className=\"text-xs truncate max-w-[120px]\">{title}</span>\n\n      {modified && !showActions && (\n        <span className=\"w-2 h-2 rounded-full bg-[var(--text-secondary)]\" />\n      )}\n\n      {/* Action buttons - shown on hover or when active */}\n      <div\n        className={`flex items-center gap-0.5 ml-1 transition-opacity ${\n          showActions ? 'opacity-100' : 'opacity-0'\n        }`}\n      >\n        {onPin && (\n          <button\n            type=\"button\"\n            onClick={(e) => {\n              e.stopPropagation()\n              onPin()\n            }}\n            className={`p-0.5 rounded hover:bg-[var(--bg-hover)] transition-colors ${\n              pinned ? 'text-[var(--accent-primary)]' : 'text-[var(--text-secondary)]'\n            }`}\n            title={pinned ? 'Unpin tab' : 'Pin tab'}\n          >\n            <Pin className=\"h-3 w-3\" />\n          </button>\n        )}\n        {onClose && !pinned && (\n          <button\n            type=\"button\"\n            onClick={(e) => {\n              e.stopPropagation()\n              onClose()\n            }}\n            className=\"p-0.5 rounded text-[var(--text-secondary)] hover:text-[var(--text-primary)] hover:bg-[var(--bg-hover)] transition-colors\"\n            title=\"Close tab\"\n          >\n            <X className=\"h-3 w-3\" />\n          </button>\n        )}\n      </div>\n\n      {/* Active indicator */}\n      {active && (\n        <div className=\"absolute bottom-0 left-0 right-0 h-[2px] bg-[var(--accent-primary)]\" />\n      )}\n    </div>\n  )\n}\n",
