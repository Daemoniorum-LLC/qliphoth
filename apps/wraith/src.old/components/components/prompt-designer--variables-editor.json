  "source": {
    "path": "/home/crook/dev/wraith/wraith-framework/src/domains/prompts/components/PromptDesigner/VariablesEditor.tsx",
    "code": "import {\n  Button,\n  Input,\n  Label,\n  Table,\n  TableBody,\n  TableCell,\n  TableHead,\n  TableHeader,\n  TableRow,\n} from \"@persona-framework/ui\"\nimport { Plus, Trash2 } from \"lucide-react\"\nimport type { PromptVariable } from \"../../types\"\n\ninterface VariablesEditorProps {\n  variables: PromptVariable[]\n  onChange: (variables: PromptVariable[]) => void\n}\n\nexport function VariablesEditor({ variables, onChange }: VariablesEditorProps) {\n  const addVariable = () => {\n    onChange([...variables, { description: \"\", name: \"\", value: \"\" }])\n  }\n\n  const removeVariable = (index: number) => {\n    onChange(variables.filter((_, i) => i !== index))\n  }\n\n  const updateVariable = (index: number, field: keyof PromptVariable, value: string) => {\n    const updated = [...variables]\n    updated[index] = { ...updated[index], [field]: value }\n    onChange(updated)\n  }\n\n  return (\n    <div className=\"flex flex-col gap-3\">\n      <div className=\"flex items-center justify-between gap-2\">\n        <Label className=\"font-semibold\">Template Variables</Label>\n        <Button onClick={addVariable} size=\"sm\">\n          <Plus className=\"mr-2 h-4 w-4\" />\n          Add Variable\n        </Button>\n      </div>\n\n      <div className=\"border border-border rounded-md max-h-[400px] overflow-auto\">\n        <Table>\n          <TableHeader>\n            <TableRow>\n              <TableHead>Name</TableHead>\n              <TableHead>Value</TableHead>\n              <TableHead>Description</TableHead>\n              <TableHead>Actions</TableHead>\n            </TableRow>\n          </TableHeader>\n          <TableBody>\n            {variables.map((variable, index) => (\n              <TableRow key={index}>\n                <TableCell>\n                  <Input\n                    onChange={(e) => updateVariable(index, \"name\", e.target.value)}\n                    placeholder=\"{{variable_name}}\"\n                    size=\"sm\"\n                    value={variable.name}\n                  />\n                </TableCell>\n                <TableCell>\n                  <Input\n                    onChange={(e) => updateVariable(index, \"value\", e.target.value)}\n                    placeholder=\"Default value\"\n                    size=\"sm\"\n                    value={variable.value}\n                  />\n                </TableCell>\n                <TableCell>\n                  <Input\n                    onChange={(e) => updateVariable(index, \"description\", e.target.value || \"\")}\n                    placeholder=\"Optional description\"\n                    size=\"sm\"\n                    value={variable.description || \"\"}\n                  />\n                </TableCell>\n                <TableCell>\n                  <Button\n                    onClick={() => removeVariable(index)}\n                    size=\"sm\"\n                    variant=\"ghost\"\n                  >\n                    <Trash2 className=\"h-4 w-4\" />\n                  </Button>\n                </TableCell>\n              </TableRow>\n            ))}\n            {variables.length === 0 && (\n              <TableRow>\n                <TableCell colSpan={4} className=\"text-center\">\n                  <div className=\"text-muted-foreground p-2\">\n                    No variables defined. Click \"Add Variable\" to create one.\n                  </div>\n                </TableCell>\n              </TableRow>\n            )}\n          </TableBody>\n        </Table>\n      </div>\n    </div>\n  )\n}\n",
