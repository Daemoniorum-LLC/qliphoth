invoke qliphoth·prelude·*;
ᛈ DevOpsStudioMsg {
    UpdateActiveSection,
}
☉ actor DevOpsStudio {
    state activeSection: String! = "overview",

    on UpdateActiveSection {
        self.activeSection = msg.0;
    }

    rite view(self) -> VNode! {
        VNode·div()
            ·class("h-full flex flex-col bg-[var(--bg-primary)] text-[var(--text-primary)]")
            ·child(
            VNode·div()
                ·class("flex-shrink-0 border-b border-[var(--border-primary)] bg-[var(--bg-secondary)]")
                ·child(
                VNode·div()
                    ·class("flex items-center overflow-x-auto scrollbar-thin")
                    // Map: ∀ item ∈ navItems
                    ·children(self.nav_items.iter().map(|item| VNode·button()
                            ·attr("key", item.id)
                            ·on_click(Click)
                            ·class("\n                flex items-center gap-2 px-4 py-2.5 text-xs font-medium whitespace-nowrap\n                border-b-2 transition-colors\n                " + ⎇ self.active_section == item.id { "border-[var(--accent-primary)] text-[var(--accent-primary)] bg-[var(--bg-primary)]" } ⎉ { "border-transparent text-[var(--text-secondary)] hover:text-[var(--text-primary)] hover:bg-[var(--bg-hover)]" }.to_string() + "\n              ")
                            ·text_child(item.icon·to_string())
                            ·text_child(item.label·to_string())).collect())
                )
            )
            ·child(
            VNode·div()
                ·class("flex-1 overflow-hidden p-4")
                ·text_child(self.render_section()·to_string())
            )
    }
}