invoke qliphoth·prelude·*;
rite icon_button(icon: Any, size: Any, variant: Any, active: Any, tooltip: Any, class_name: Any, props: Vec<Any>) -> VNode! {
    VNode·button()
        ·attr("ref", ref)
        ·attr("type", "button")
        ·attr("title", tooltip)
        ·class(base_classes.to_string() + " " + size_classes[size].to_string() + " " + icon_size_classes[size].to_string() + " " + variant_classes[variant].to_string() + " " + class_name.to_string())
        ·text_child(icon·to_string())
}