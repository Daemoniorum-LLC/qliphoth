    "path": "/home/crook/dev/wraith/wraith-framework/src/ui/components/MarkdownPreview.tsx",
    "code": "import React, { useState, useEffect } from 'react'\nimport { Button, Toggle } from '@persona-framework/ui'\nimport { FileText, Code, SplitSquareVertical } from 'lucide-react'\nimport ReactMarkdown from 'react-markdown'\nimport remarkGfm from 'remark-gfm'\nimport { Prism as SyntaxHighlighter } from 'react-syntax-highlighter'\nimport { vscDarkPlus } from 'react-syntax-highlighter/dist/esm/styles/prism'\n\ninterface MarkdownPreviewProps {\n  filePath: string | null\n  content?: string\n}\n\ntype ViewMode = 'preview' | 'source' | 'split'\n\nexport function MarkdownPreview({ filePath, content: propContent }: MarkdownPreviewProps) {\n  const [content, setContent] = useState<string>(propContent || '')\n  const [loading, setLoading] = useState(false)\n  const [error, setError] = useState<string | null>(null)\n  const [viewMode, setViewMode] = useState<ViewMode>('preview')\n\n  useEffect(() => {\n    if (propContent !== undefined) {\n      setContent(propContent)\n      return\n    }\n\n    if (!filePath) {\n      setContent('')\n      setError(null)\n      return\n    }\n\n    setLoading(true)\n    setError(null)\n\n    const absolutePath = filePath.startsWith('/') ? filePath : `/workspace/persona-framework/${filePath}`\n\n    fetch(`/api/project/read?path=${encodeURIComponent(absolutePath)}`)\n      .then(response => {\n        if (!response.ok) {\n          if (response.status === 404) {\n            throw new Error('API endpoint /api/project/read not found. Backend support needed.')\n          }\n          throw new Error(`Failed to read file: ${response.statusText}`)\n        }\n        return response.json()\n      })\n      .then(data => {\n        setContent(data.content || '')\n        setLoading(false)\n      })\n      .catch(err => {\n        setError(err.message)\n        setLoading(false)\n      })\n  }, [filePath, propContent])\n\n  if (!filePath && !propContent) {\n    return (\n      <div className=\"w-full h-full flex flex-col bg-[#1e1e1e]\">\n        <div className=\"p-10 text-center text-[#858585]\">\n          Select a markdown file to preview\n        </div>\n      </div>\n    )\n  }\n\n  if (loading) {\n    return (\n      <div className=\"w-full h-full flex flex-col bg-[#1e1e1e]\">\n        <div className=\"flex items-center gap-2 px-3 py-2 bg-[#2b2b2b] border-b border-[#3c3c3c] text-[#cccccc] text-xs\">{filePath}</div>\n        <div className=\"p-10 text-center text-[#858585]\">Loading markdown...</div>\n      </div>\n    )\n  }\n\n  if (error) {\n    return (\n      <div className=\"w-full h-full flex flex-col bg-[#1e1e1e]\">\n        <div className=\"flex items-center gap-2 px-3 py-2 bg-[#2b2b2b] border-b border-[#3c3c3c] text-[#cccccc] text-xs\">{filePath}</div>\n        <div className=\"p-5 text-[#f48771]\">{error}</div>\n      </div>\n    )\n  }\n\n  const renderPreview = () => (\n    <div className=\"flex-1 overflow-auto bg-[#1e1e1e] px-10 py-5 text-[#d4d4d4] text-sm leading-relaxed border-l border-[#3c3c3c]\">\n      <ReactMarkdown\n        remarkPlugins={[remarkGfm]}\n        components={{\n          h1: ({ children }) => <h1 className=\"text-[32px] font-bold text-white mt-6 mb-4 pb-2 border-b border-[#3c3c3c]\">{children}</h1>,\n          h2: ({ children }) => <h2 className=\"text-2xl font-semibold text-white mt-5 mb-3 pb-1.5 border-b border-[#3c3c3c]\">{children}</h2>,\n          h3: ({ children }) => <h3 className=\"text-xl font-semibold text-white mt-4 mb-2.5\">{children}</h3>,\n          h4: ({ children }) => <h4 className=\"text-base font-semibold text-[#cccccc] mt-3 mb-2\">{children}</h4>,\n          h5: ({ children }) => <h5 className=\"text-sm font-semibold text-[#cccccc] mt-2.5 mb-1.5\">{children}</h5>,\n          h6: ({ children }) => <h6 className=\"text-sm font-semibold text-[#cccccc] mt-2.5 mb-1.5\">{children}</h6>,\n          p: ({ children }) => <p className=\"mb-4 text-[#d4d4d4]\">{children}</p>,\n          ul: ({ children }) => <ul className=\"ml-6 mb-4 text-[#d4d4d4]\">{children}</ul>,\n          ol: ({ children }) => <ol className=\"ml-6 mb-4 text-[#d4d4d4]\">{children}</ol>,\n          li: ({ children }) => <li className=\"mb-2\">{children}</li>,\n          a: ({ href, children }) => (\n            <a href={href} className=\"text-[#4fc3f7] no-underline hover:underline\" target=\"_blank\" rel=\"noopener noreferrer\">\n              {children}\n            </a>\n          ),\n          code({ node, inline, className, children, ...props }) {\n            const match = /language-(\\w+)/.exec(className || '')\n            const language = match ? match[1] : ''\n\n            return !inline && language ? (\n              <SyntaxHighlighter\n                style={vscDarkPlus}\n                language={language}\n                PreTag=\"div\"\n                customStyle={{\n                  margin: 0,\n                  borderRadius: '6px',\n                  fontSize: '13px',\n                }}\n                {...props}\n              >\n                {String(children).replace(/\\n$/, '')}\n              </SyntaxHighlighter>\n            ) : (\n              <code className=\"bg-[#3c3c3c] px-1.5 py-0.5 rounded font-mono text-[13px] text-[#f59e0b]\" {...props}>\n                {children}\n              </code>\n            )\n          },\n          pre: ({ children }) => <pre className=\"mb-4 rounded-md overflow-auto\">{children}</pre>,\n          blockquote: ({ children }) => (\n            <blockquote className=\"ml-0 mb-4 pl-4 border-l-4 border-[#4fc3f7] text-[#b0b0b0] italic\">\n              {children}\n            </blockquote>\n          ),\n          table: ({ children }) => (\n            <table className=\"w-full mb-4 border-collapse border border-[#3c3c3c]\">\n              {children}\n            </table>\n          ),\n          th: ({ children }) => (\n            <th className=\"bg-[#2b2b2b] text-white font-semibold p-3 text-left border border-[#3c3c3c]\">\n              {children}\n            </th>\n          ),\n          td: ({ children }) => (\n            <td className=\"p-3 border border-[#3c3c3c] text-[#d4d4d4]\">\n              {children}\n            </td>\n          ),\n          tr: ({ children }) => <tr className=\"even:bg-[#252526]\">{children}</tr>,\n          hr: () => <hr className=\"border-none border-t border-[#3c3c3c] my-6\" />,\n          img: ({ src, alt }) => (\n            <img src={src} alt={alt} className=\"max-w-full h-auto rounded-md mt-2 mb-4\" />\n          ),\n        }}\n      >\n        {content}\n      </ReactMarkdown>\n    </div>\n  )\n\n  const renderSource = () => (\n    <div className=\"flex-1 overflow-auto bg-[#1e1e1e] p-5 font-mono text-sm text-[#d4d4d4] leading-relaxed whitespace-pre-wrap break-words\">\n      {content}\n    </div>\n  )\n\n  return (\n    <div className=\"w-full h-full flex flex-col bg-[#1e1e1e]\">\n      <div className=\"flex items-center justify-between px-3 py-2 bg-[#2b2b2b] border-b border-[#3c3c3c] text-[#cccccc] text-xs\">\n        <span>{filePath || 'Markdown Preview'}</span>\n        <div className=\"flex gap-1\">\n          <Button\n            variant={viewMode === 'preview' ? 'default' : 'ghost'}\n            size=\"sm\"\n            onClick={() => setViewMode('preview')}\n            title=\"Preview\"\n          >\n            <FileText className=\"w-4 h-4\" />\n          </Button>\n          <Button\n            variant={viewMode === 'split' ? 'default' : 'ghost'}\n            size=\"sm\"\n            onClick={() => setViewMode('split')}\n            title=\"Split View\"\n          >\n            <SplitSquareVertical className=\"w-4 h-4\" />\n          </Button>\n          <Button\n            variant={viewMode === 'source' ? 'default' : 'ghost'}\n            size=\"sm\"\n            onClick={() => setViewMode('source')}\n            title=\"Source\"\n          >\n            <Code className=\"w-4 h-4\" />\n          </Button>\n        </div>\n      </div>\n\n      {viewMode === 'preview' && renderPreview()}\n      {viewMode === 'source' && renderSource()}\n      {viewMode === 'split' && (\n        <div className=\"flex flex-1 overflow-hidden\">\n          {renderSource()}\n          {renderPreview()}\n        </div>\n      )}\n    </div>\n  )\n}\n",
