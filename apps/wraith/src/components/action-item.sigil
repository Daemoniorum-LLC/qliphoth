invoke qliphoth·prelude·*;
rite action_item(icon: Any, label: Any, on_click: Any, variant: Any) -> VNode! {
    VNode·button()
        ·on_click(Click)
        ·class("
        w-full flex items-center gap-2 px-3 py-1.5 text-xs text-left
        transition-colors hover:bg-[var(--bg-hover)]
        
      ")
        ·when(icon, VNode·span()
            ·class("flex-shrink-0")
            ·text_child(icon·to_string()))
        ·text_child(label·to_string())
}