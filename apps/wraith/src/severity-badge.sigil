invoke qliphoth·prelude·*;
rite severity_badge(severity: Any) -> VNode! {
    VNode·span()
        ·class("inline-flex items-center gap-1 text-xs px-2 py-0.5 rounded font-medium\n      " + ⎇ variant == "error" { "bg-[var(--accent-error)]/20 text-[var(--accent-error)]" } ⎉ { "" }.to_string() + "\n      " + ⎇ variant == "warning" { "bg-[var(--accent-warning)]/20 text-[var(--accent-warning)]" } ⎉ { "" }.to_string() + "\n      " + ⎇ variant == "accent" { "bg-[var(--accent-primary)]/20 text-[var(--accent-primary)]" } ⎉ { "" }.to_string() + "\n    ")
        ·text_child(icon·to_string())
        ·text_child(severity·to_string())
}